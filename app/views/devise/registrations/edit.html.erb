<h2>Update Address Information</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :province_id, "Province" %><br />
    <%= f.collection_select :province_id, Province.all, :id, :name, prompt: "Select your province" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Current Password (required to update)" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Address" %>
  </div>
<% end %>
