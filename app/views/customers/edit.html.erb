<h1>Edit My Address</h1>

<%= form_with model: @customer, local: true do |f| %>
  <div>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :province_id, "Province" %><br>
    <%= f.collection_select :province_id, @provinces, :id, :name %>
  </div>

  <div style="margin-top: 10px;">
    <%= f.submit "Update Address", class: "btn btn-primary" %>
  </div>
<% end %>

<br>
